{
    "name": "dn_sketchingenhanced",
    "version": "3.0.2",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-sketching-enhanced",
    "dependencies": {
        "dn_vuecolor": "^2.0.0",
        "esri": "^4.7.2",
        "map-widget": "^4.12.0",
        "apprt-core": "^4.12.0",
        "apprt-binding": "^4.12.0",
        "apprt-vue": "^4.12.0",
        "apprt-vuetify": "^4.12.0"
    },
    "cssThemesExtension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "sketchingEnhancedWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "dockTool": "sketchingEnhancedWidgetToggleTool",
                "minimizeOnClose": true,
                "closable": true,
                "marginBox": {
                    "l": 20,
                    "t": 130,
                    "w": 650,
                    "h": 450
                },
                "minSize": {
                    "w": 620,
                    "h": 400
                },
                "autofocus": false,
                "windowClass": "noPadding"
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./SketchingEnhancedModel",
            "provides": "dn_sketchingenhanced.SketchingEnhancedModel",
            "propertiesConstructor": true,
            "properties": {
                "graphicsLayerId": "sketching-enhanced-graphics",
                "graphicsLayerTitle": "${ui.graphicsLayerTitle}",
                "graphicsLayerListMode": "hide",
                "initialActiveTool": "point",
                "initialGeometryEditMode": "reshape",
                "toggleGeometryEditModeOnClick": true,
                "snappingEnabled": true,
                "snappingSelfEnabled": true,
                "snappingFeatureEnabled": true,
                "pointSymbol": {
                    "type": "simple-marker",
                    "style": "circle",
                    "size": 6,
                    "color": [255, 255, 255, 1],
                    "outline": {
                        "style": "solid",
                        "width": 1,
                        "color": [50, 0, 0, 1]
                    }
                },
                "polylineSymbol": {
                    "type": "simple-line",
                    "style": "solid",
                    "width": 2,
                    "color": [50, 50, 50, 1]
                },
                "polygonSymbol": {
                    "type": "simple-fill",
                    "style": "solid",
                    "color": [150, 150, 150, 0.2],
                    "outline": {
                        "style": "solid",
                        "color": [50, 50, 50, 1],
                        "width": 2
                    }
                },
                "textSymbol": {
                    "type": "text",
                    "color": [50, 50, 50, 1],
                    "font": {
                        "size": 9,
                        "family": "sans-serif",
                        "weight": "normal"
                    },
                    "horizontalAlignment": "left",
                    "verticalAlignment": "baseline"
                }
            }
        },
        {
            "name": "SketchingEnhancedWidgetFactory",
            "provides": [
                "dijit.Widget",
                "dn_sketchingenhanced.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "sketchingEnhancedWidget"
            },
            "references": [
                {
                    "name": "_sketchingEnhancedModel",
                    "providing": "dn_sketchingenhanced.SketchingEnhancedModel"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "SketchingEnhancedWidgetToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "sketchingEnhancedWidgetToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-pencil",
                "toolRole": "toolset",
                "togglable": true,
                "activateHandler": "activateTool",
                "deactivateHandler": "deactivateTool"
            },
            "references":[{
                "name": "handlerScope",
                "providing": "dn_sketchingenhanced.Widget"
            }]
        }
    ]
}
